import time
import os
import random
import msvcrt  # Windows uniquement

def clear():
    os.system('cls' if os.name == 'nt' else 'clear')

def afficher_ligne(position, longueur=30):
    ligne = ['-'] * longueur
    ligne[position] = 'üëæ'
    print("".join(ligne))
    print("\nAppuie sur ESPACE pour tirer !")

def jeu():
    longueur = 30
    position_cible = random.randint(5, longueur - 6)  # Position al√©atoire raisonnable
    touche = False

    print("=== MINI JEU DE TIR ===")
    print("Essaie de tirer quand üëæ est √† la position secr√®te (entre 5 et 25)")
    input("Appuie sur Entr√©e pour commencer...")

    for pos in range(longueur):
        clear()
        afficher_ligne(pos, longueur)
        time.sleep(0.1)  # d√©placement plus lent

        if msvcrt.kbhit():
            key = msvcrt.getch()


            
            if key == b' ':
                touche = True
                if pos == position_cible:
                    print(f"\nüí• TOUCH√â ! Tu as vis√© juste √† la position {pos} !")
                else:
                    print(f"\n‚ùå Rat√©... Tu as tir√© √† la position {pos}, mais la cible √©tait √† {position_cible}.")
                break

    if not touche:
        print(f"\n Tu n'as pas tir√©... la cible √©tait √† la position {position_cible}.")

if __name__ == "__main__":
    jeu()
